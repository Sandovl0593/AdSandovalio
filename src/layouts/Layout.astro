---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <div id="app" class="relative flex items-stretch gap-2 bg-orange-300">
            <slot />
        </div>
    </body>
</html>
<style is:global>
    :root {
        /* --accent: 136, 58, 234;
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        ); */
    }
    #app {
        display: grid;
        grid-template-areas:
            "profile navbar"
            "profile info"
            "experience techs"
            "softskills techs"
            "projects projects";
    }
    body {
        font-family: system-ui, sans-serif;
        background: #565f77;
        width: 80%;
        margin: 0 auto;
    }
</style>
