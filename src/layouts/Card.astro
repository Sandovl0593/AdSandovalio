---
interface Props {
  areaSection: String;
}

const { areaSection } = Astro.props;
---

<section
  class="flex flex-col items-center rounded-lg bg-slate-800 shadow duration-300 hover:bg-slate-700 hover:duration-300 md:flex-row"
>
  <slot />
</section>

<style define:vars={{ areaSection }}>
  section {
    grid-area: var(--areaSection);
  }
</style>
